{
  "name": "askpplx",
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Minimal Unix-style CLI for querying Perplexity Sonar API.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jercik/askpplx.git"
  },
  "type": "module",
  "bin": {
    "askpplx": "bin/askpplx"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "prepublishOnly": "pnpm run rebuild",
    "build": "tsc -p tsconfig.app.json && cp -r src/prompts dist/",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fta": "fta-check",
    "knip": "knip",
    "lint": "eslint",
    "rebuild": "pnpm run clean && pnpm run build",
    "start": "pnpm -s run rebuild && node --env-file=.env bin/askpplx",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc -b --noEmit"
  },
  "keywords": [],
  "packageManager": "pnpm@10.30.1",
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@ai-sdk/perplexity": "^3.0.19",
    "@commander-js/extra-typings": "^14.0.0",
    "ai": "^6.0.97",
    "commander": "^14.0.3",
    "conf": "^15.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-config-axkit": "^1.2.1",
    "fta-check": "^1.5.1",
    "fta-cli": "^3.0.0",
    "knip": "^5.85.0",
    "prettier": "3.8.1",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
