{
  "name": "ask-pplx-cli",
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Minimal Unix-style CLI for querying Perplexity Sonar API.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jercik/ask-pplx-cli.git"
  },
  "type": "module",
  "bin": {
    "askpplx": "bin/askpplx"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "pnpm -s run rebuild && node --env-file=.env bin/askpplx",
    "build": "tsc -p tsconfig.app.json && cp -r src/prompts dist/",
    "clean": "rm -rf dist *.tsbuildinfo",
    "rebuild": "pnpm run clean && pnpm run build",
    "prepare": "husky",
    "prepublishOnly": "pnpm run rebuild",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "knip": "knip",
    "fta:check": "fta-check"
  },
  "keywords": [],
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b",
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@ai-sdk/perplexity": "^2.0.21",
    "ai": "^5.0.106",
    "commander": "^14.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.4.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "^62.0.0",
    "fta-check": "^1.2.0",
    "fta-cli": "^3.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "knip": "^5.70.1",
    "prettier": "3.6.2",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  }
}
